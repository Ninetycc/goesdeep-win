---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header";
import Footer from "../components/Footer";
import Dmsolist from "../components/Dmsolist.astro";
import Biow from "../components/Biow.astro";
---

<Layout title="THE ANTIDOTE">
  <Header client:only="react" />
  <main class="container">
    <!-- Jumbotron -->
    <div
      class="bg-gradient-to-tr from-red-900 to-blue-900 h-96 w-full relative rounded-xl"
    >
      <img
        src="images/Med-Bed001.jpg"
        class="w-full h-full object-cover absolute mix-blend-overlay rounded-xl"
      />
      <div class="p-24">
        <h1
          class="text-white text-xl lg:text-[4rem] lg:leading-[4rem] font-bold text-center text-transform: uppercase"
        >
          THE ANTIDOTE
        </h1>
        <h2 class="text-slate-100 text-xl mt-5 text-center">
          THE ANTIDOTE | The Explosive Truth, Origin, and Antidote for Covid-19
          | SHARE EVERYWHERE.(Dr. Bryan Ardis)
        </h2>
      </div>
    </div>
    <!-- Jumbotron -->

    <Dmsolist />

    <!-- THE ANTIDOTE | The Explosive Truth, Origin, and Antidote for Covid-19 | SHARE EVERYWHERE. -->
    <div
      class="block px-4 bg-white m-4 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] rounded-xl border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 rounded-b lg:rounded-b-none lg:rounded-r p-4 justify-between leading-normal"
    >
      <Biow />
      <h2 id="ardis">
        <p class="mb-4 text-base text-green-900">
          THE ANTIDOTE | The Explosive Truth, Origin, and Antidote for Covid-19
          | SHARE EVERYWHERE.
        </p>
      </h2>
      <div
        class="content-center bg-white overflow-hidden bg-cover bg-no-repeat"
        data-te-ripple-init
        data-te-ripple-color="light"
      >
        <div
          class="embed-responsive embed-responsive-16by9 relative w-full overflow-hidden"
          style="padding-top: 56.25%"
        >
          <iframe
            class="embed-responsive-item absolute bottom-0 left-0 right-0 top-0 h-full w-full rounded-xl"
            src="https://rumble.com/embed/v3j1r5v/?pub=166b2j"
            allowfullscreen=""
            data-gtm-yt-inspected-2340190_699="true"
            id="240632615"></iframe>
        </div>
      </div>
      <div class="p-6 top-0 text-center">
        <h5
          class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
        >
          <a href="./"
            ><span
              class="text-red-700 bg-white text-base hover:text-lg hover:text-green-900"
              >GO BACK</span
            >
          </a>
        </h5>
        <h5
          class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
        >
          <a
            href="https://rumble.com/v3ln577-the-antidote-the-explosive-truth-origin-and-antidote-for-covid-19-share-eve.html"
            rel="noopener"
            target="_blank"
            ><span
              class="text-red-700 bg-white text-base hover:text-lg hover:text-green-900"
              >THE ANTIDOTE | The Explosive Truth, Origin, and Antidote for
              Covid-19 | SHARE EVERYWHERE.</span
            >
          </a>
        </h5>
        <p class="mb-4 text-base text-black">
          Watch this explosive interview with<br /> Dr. Bryan Ardis and Jason Shurka
          exposing the truth, origin,<br /> and unexpected antidote for C19 that
          ravaged the world.
        </p>
      </div>
    </div>
    <!-- THE ANTIDOTE | The Explosive Truth, Origin, and Antidote for Covid-19 | SHARE EVERYWHERE. -->
  </main>
</Layout>
<Footer client:only="react" />
