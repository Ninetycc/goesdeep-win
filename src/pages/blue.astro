---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header";
import Footer from "../components/Footer";
---

<Layout title="HOME | GOES DEEP">
  <Header client:only="react" />
  <main class="container">
    <!-- Jumbotron -->
    <div
      class="bg-gradient-to-tl from-purple-900 to-green-700 h-96 w-full relative"
    >
      <img
        src="images/Med-Bed001.jpg"
        class="w-full h-full object-cover absolute mix-blend-overlay"
      />
      <div class="p-24">
        <h1
          class="text-white text-xl lg:text-[4rem] lg:leading-[4rem] font-bold text-center text-transform: uppercase"
        >
          HOME
        </h1>
        <h2 class="text-slate-100 sm:text-2xl md:text-3xl mt-5 text-center">
          ITS GOES DEEP
        </h2>
      </div>
    </div>
    <!-- Jumbotron -->

    <!-- https://tailwindcss.com/docs/max-width -->
    <!-- "max-w-2xl grid grid-cols-1 lg:grid-cols-2 gap-4 lg:gap-[7rem] lg:pt-5 text-center lg:text-left max-w-[1024px] mx-auto" -->
    <div class="container mx-auto px-4 max-w-2xl bg-red-900 text-white">
      <div class="flex flex-col lg:flex lg:flex-row items-center relative z-0">
        <div>
          <h1
            class="text-almost-black text-xl lg:text-[4rem] lg:leading-[4rem] font-bold"
          >
            HOME
          </h1>
          <p class="py-5 lg:py-[4rem] lg:text-xl">
            Get your team in sync, no matter your location. Streamline
            processes, create team rituals, and watch productivity soar.
          </p>
        </div>
      </div>
      <div class="order-first lg:order-last">
        <img class="lg:hidden mb-9" src="images/Med-Bed001.jpg" alt="Med-Bed" />
        <img
          class="hidden lg:block"
          src="images/Med-Bed001.jpg"
          alt="Med-Bed"
        />
      </div>
    </div>

    <div class="container mx-auto px-4 max-w-2xl m-4 bg-blue-200 text-gray-800">
      ...bulk of the card's content 999.
      <div
        class="relative overflow-hidden bg-cover bg-no-repeat"
        data-te-ripple-init
        data-te-ripple-color="light"
      >
        <div
          class="embed-responsive embed-responsive-16by9 relative w-full overflow-hidden"
          style="padding-top: 56.25%"
        >
          <iframe
            class="embed-responsive-item absolute bottom-0 left-0 right-0 top-0 h-full w-full"
            src="https://www.youtube.com/embed/vlDzYIIOYmM?enablejsapi=1&origin=https%3A%2F%2Fmdbootstrap.com"
            allowfullscreen=""
            data-gtm-yt-inspected-2340190_699="true"
            id="240632615"></iframe>
        </div>
      </div>
      <div class="p-6 text-center">
        <h5
          class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
        >
          Card title 1
        </h5>
        <p class="mb-4 text-base text-neutral-600 dark:text-neutral-200">
          Some quick example text to build on the card title and make up the
          bulk of the card's content.
        </p>
      </div>
    </div>

    <!-- bg-blue-900 -->
    <div class="container mx-auto px-4 max-w-2xl m-4 bg-blue-900 text-gray-800">
      ...bulk of the card's content blue-900.
      <div
        class="content-center overflow-hidden bg-cover bg-no-repeat"
        data-te-ripple-init
        data-te-ripple-color="light"
      >
        <div
          class="embed-responsive embed-responsive-16by9 relative w-full overflow-hidden"
          style="padding-top: 56.25%"
        >
          <iframe
            class="embed-responsive-item absolute bottom-0 left-0 right-0 top-0 h-full w-full"
            src="https://www.youtube.com/embed/vlDzYIIOYmM?enablejsapi=1&origin=https%3A%2F%2Fmdbootstrap.com"
            allowfullscreen=""
            data-gtm-yt-inspected-2340190_699="true"
            id="240632615"></iframe>
        </div>
      </div>
      <div class="p-6 top-0 text-center">
        <h5
          class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
        >
          Card title 2
        </h5>
        <p class="mb-4 text-base text-neutral-600 dark:text-neutral-200">
          Some quick example text to build on the card title and make up the
          bulk of the card's content.
        </p>
      </div>
    </div>
    <!-- bg-blue-900 -->

    <!-- https://tailwindcss.com/docs/max-width -->

    <!-- https://tailwindcss.com/docs/max-width -->
    <!-- "container mx-auto px-4 max-w-2xl bg-purple-900 text-white sm:bg-green md:bg-blue md:text-yellow lg:bg-red xl:bg-orange" -->
    <div class="container mx-auto px-4 max-w-2xl bg-blue-900 text-white">
      ...bulk of the card's content.
      <div
        class="embed-responsive embed-responsive-16by9 relative w-full overflow-hidden"
        style="padding-top: 56.25%"
      >
        <iframe
          class="embed-responsive-item absolute bottom-0 left-0 right-0 top-0 h-full w-full"
          src="https://www.youtube.com/embed/vlDzYIIOYmM?enablejsapi=1&origin=https%3A%2F%2Fmdbootstrap.com"
          allowfullscreen=""
          data-gtm-yt-inspected-2340190_699="true"
          id="240632615"></iframe>
      </div>
    </div>
    <!-- https://tailwindcss.com/docs/max-width -->
  </main>
</Layout>
<Footer client:only="react" />
