---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header";
import Footer from "../components/Footer";
import Fun from "../components/Fun.astro";
---

<Layout title="Kali Linux">
  <Header client:only="react" />
  <main class="container">
    <!-- Jumbotron -->
    <div
      class="bg-gradient-to-tr from-blue-900 to-gray-700 h-96 w-full relative rounded-xl"
    >
      <img
        src="images/Med-Bed001.jpg"
        class="w-full h-full object-cover absolute mix-blend-overlay rounded-xl"
      />
      <div class="p-24">
        <h1
          class="text-white text-xl lg:text-[4rem] lg:leading-[4rem] font-bold text-center text-transform: uppercase"
        >
          Kali Linux
        </h1>
        <h2 class="text-slate-100 text-xl mt-5 text-center">
          Penetration Testing with Kali Linux as a Docker Container
        </h2>
      </div>
    </div>
    <!-- Jumbotron -->

    <!-- Penetration Testing with Kali Linux as a Docker Container -->
    <div
      class="block px-4 bg-white m-4 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] rounded-xl border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 rounded-b lg:rounded-b-none lg:rounded-r p-4 justify-between leading-normal"
    >
      <Fun />
      <h2 id="docker">
        <p class="mb-4 text-base text-blue-950">
          Penetration Testing with Kali Linux as a Docker Container
        </p>
      </h2>
      <div
        class="content-center bg-white overflow-hidden bg-cover bg-no-repeat"
        data-te-ripple-init
        data-te-ripple-color="light"
      >
        <div class="aspect-w-16 aspect-h-9">
          <a
            href="https://thenewstack.io/penetration-testing-with-kali-linux-as-a-docker-container/"
            rel="noopener"
            target="_blank"
          >
            <img
              class="w-full"
              src="./images/kali-desktop-xfce.jpg"
              alt="kali-desktop-xfce"
            />
          </a>
        </div>
      </div>
      <div class="p-6 top-0 text-center">
        <h5
          class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
        >
          <a href="./"
            ><span
              class="text-red-700 bg-white text-base hover:text-lg hover:text-green-900"
              >GO BACK</span
            >
          </a>
        </h5>

        <h5
          class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
        >
          <a
            href="https://thenewstack.io/penetration-testing-with-kali-linux-as-a-docker-container/"
            rel="noopener"
            target="_blank"
            ><span
              class="text-sky-400 bg-white text-base hover:text-lg hover:text-green-900"
              >Penetration Testing with Kali Linux as a Docker Container</span
            >
          </a>
        </h5>
        <h5
          class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
        >
          <a
            href="https://thenewstack.io/how-kali-linux-can-help-security-test-your-network/"
            rel="noopener"
            target="_blank"
            ><span
              class="text-sky-400 bg-white text-base hover:text-lg hover:text-green-900"
              >How Kali Linux Can Help Security Test Your Network</span
            >
          </a>
        </h5>
        <p class="mb-4 text-base text-black">
          Penetration Testing with Kali Linux as a Docker Container
        </p>
      </div>
    </div>
    <!--  Penetration Testing with Kali Linux as a Docker Container -->

    <!-- Card title 2 -->
  </main>
</Layout>
<Footer client:only="react" />
