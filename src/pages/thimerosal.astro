---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header";
import Footer from "../components/Footer";
import Suramin from "../components/Suramin.astro";
import Lista from "../components/Lista.astro";
---

<Layout title="MERCURY / THIMEROSAL">
  <Header client:only="react" />
  <main class="container">
    <!-- Jumbotron -->
    <div
      class="bg-gradient-to-tl from-blue-900 to-sky-400 h-96 w-full relative rounded-xl"
    >
      <img
        src="images/Med-Bed001.jpg"
        class="w-full h-full object-cover absolute mix-blend-overlay"
      />
      <div class="p-24">
        <h1
          class="text-white text-xl lg:text-[4rem] lg:leading-[4rem] font-bold text-center text-transform: uppercase"
        >MERCURY / THIMEROSAL</h1>
        <h2 class="text-slate-100 text-xl mt-5 text-center">MERCURY / THIMEROSAL IS IN ALL VACCINES!!!</h2>
      </div>
    </div>
    <!-- Jumbotron -->

    <!-- MERCURY / THIMEROSAL IS IN ALL VACCINES!!! -->
    <div
      class="block px-4 bg-white m-4 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] rounded-xl border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 rounded-b lg:rounded-b-none lg:rounded-r p-4 justify-between leading-normal"
    >
      <Lista />

      <h2 id="mercury">
  
        <p class="mb-4 text-base text-left font-bold text-black">MERCURY / THIMEROSAL IS IN ALL VACCINES!!!</p>
      </h2>
      <div
        class="content-center bg-white overflow-hidden bg-cover bg-no-repeat"
        data-te-ripple-init
        data-te-ripple-color="light"
      >
        <div
          class="embed-responsive embed-responsive-16by9 relative w-full overflow-hidden"
          style="padding-top: 56.25%"
        >
          <iframe
            class="embed-responsive-item absolute bottom-0 left-0 right-0 top-0 h-full w-full rounded-xl"
            src="https://www.bitchute.com/embed/yAYQPVO81t0N/"
            allowfullscreen=""
            data-gtm-yt-inspected-2340190_699="true"
            id="240632615"></iframe>
        </div>
      </div>
      <div class="p-6 top-0 text-center">
        <h5
  class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
>
  <a href="./thimerosal#mercury"
    ><span
      class="text-pink-500 bg-yellow-100 font-bold hover:text-green-900"
      >MERCURY / THIMEROSAL IS IN ALL VACCINES!!!</span
    >
  </a>
</h5>

<h5
  class="mb-2 text-xl font-medium leading-tight text-neutral-800 dark:text-neutral-50"
>
  <a href="./autism#thimerosal"
    ><span
      class="text-pink-500 bg-yellow-100 font-bold hover:text-green-900"
      >Trace Amounts is an investigative documentary exploring the link between
      the mercury based preservative thimerosal and the autism epidemic.</span
    >
  </a>
</h5>
        <Suramin />
      
      </div>
    </div>
    <!-- MERCURY / THIMEROSAL IS IN ALL VACCINES!!! -->

    <!-- AN-OLDER-CODE -->
  </main>
</Layout>
<Footer client:only="react" />
